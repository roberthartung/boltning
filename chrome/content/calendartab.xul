<?xml version="1.0"?>
<overlay id="caldavcalendar-overlay-panel" xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul" xmlns:html="http://www.w3.org/1999/xhtml">
  <script type="application/javascript" src="chrome://caldavcalendar/content/calendartab.js"/>
<!--
  <toolbar id="tabbar-toolbar">
    <toolbarbutton id="caldav-calendar-open">
  </toolbar>
-->

  <tabpanels id="tabpanelcontainer">
    <vbox id="calendarTabPanel" flex="1">
      <modevbox id="calendar-toolbox-container" mode="calendar">
        <toolbox class="mail-toolbox">
          <toolbar class="inline-toolbar chromeclass-toolbar" mode="full" fullscreentoolbar="true">
            <toolbarbutton type="menu-button" label="Open" class="toolbarbutton-1">
              <menupopup>
                <menuitem label="Open Changed Files"/>
                <menuitem label="Open All"/>
              </menupopup>
            </toolbarbutton>
          </toolbar>
        </toolbox>
      </modevbox>
      <notificationbox>
        <notification label="This is a warning"/>
      </notificationbox>
      <hbox id="calendarContent" flex="1">
        <vbox>
          <datepicker type="grid"/>
          <tree id="calendar-tree" hidecolumnpicker="true" flex="1">
            <treecols>
              <treecol label="Calendar" flex="1" id="name" />
            </treecols>

            <treechildren id="calendar-tree-children"/>
          </tree>
        </vbox>
        <!--<datepicker type="popup" value="2008/08/24"/>-->
        <splitter/>
        <grid flex="5">
          <columns>
            <column flex="1"/>
            <column flex="1"/>
            <column flex="1"/>
            <column flex="1"/>
            <column flex="1"/>
          </columns>
          <rows>
            <row>
              <label value="Monday"/>
              <label value="Tuesday"/>
              <label value="Wednesday"/>
              <label value="Thursday"/>
              <label value="Friday"/>
            </row>
            <row>
              All Day Events
            </row>
            <row>
              <stack id="calendar-monday"/>
              <stack id="calendar-tuesday"/>
              <stack id="calendar-wednesday"/>
              <stack id="calendar-thursday"/>
              <stack id="calendar-friday"/>
            </row>
          </rows>
        </grid>
        <!--
        <hbox flex="1">
          <vbox flex="1">
            <label value="Monday"/>
            <stack flex="1" id="calendar-monday">

            </stack>
          </vbox>
          <vbox flex="1">
            <label value="Tuesday"/>
