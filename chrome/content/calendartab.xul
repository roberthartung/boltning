            </stack>
          </vbox>
          <vbox flex="1">
            <label value="Wednesday"/>
            <stack flex="1" id="calendar-wednesday">

            </stack>
          </vbox>
          <vbox flex="1">
            <label value="Thursday"/>
            <stack flex="1" id="calendar-thursday">

            </stack>
          </vbox>
          <vbox flex="1">
            <label value="Friday"/>
            <stack flex="1" id="calendar-friday">

            </stack>
          </vbox>
        </hbox>
      -->
        <splitter/>
        <colorpicker/>
      </hbox>

    </vbox>
  </tabpanels>


</overlay>
